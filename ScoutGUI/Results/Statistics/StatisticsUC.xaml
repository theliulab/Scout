                    </DVC:Chart>
                    <Rectangle x:Name="WaitImage"
                    Width="auto"
                    Height="auto"
                    Grid.Row="0"
                    Grid.RowSpan="10"
                    Visibility="Collapsed"
                    Opacity="0.4"
                    Fill="Black"/>

